<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="br.com.trivio.wms">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.CAMERA" />

  <application
    android:name=".MyApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme.NoActionBar"
    android:usesCleartextTraffic="true">
    <activity android:name=".ui.picking.PickItemActivity"></activity>
    <activity
      android:name=".ui.equipments.AddEquipmentsListActivity"
      android:screenOrientation="portrait" />
    <activity android:name=".ui.picking.PickingListActivity" />
    <activity
      android:name=".ScrollingActivity"
      android:label="@string/title_activity_scrolling"
      android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
    <activity
      android:name=".ui.cargos.conference.ConferenceCountsActivity"
      android:label="@string/title_activity_conference_counts"
      android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
    <activity
      android:name=".ui.cargos.conference.CameraActivity"
      android:screenOrientation="portrait" />
    <activity
      android:name=".ui.cargos.conference.CargoConferenceActivity"
      android:screenOrientation="portrait" />
    <activity android:name=".ui.tasks.TaskDetailsActivity" />
    <activity android:name=".LaunchActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name=".ui.login.LoginActivity"
      android:label="@string/app_name" />
    <activity
      android:name=".MenuActivity"
      android:label="@string/app_name" />
    <activity
      android:name=".ui.login.LoginSettingsActivity"
      android:label="@string/action_settings" />
    <activity android:name=".ui.cargos.CargosListActivity" />
    <activity android:name=".ui.tasks.TasksListActivity" />
    <activity android:name=".ui.cargos.StartConferenceActivity" />
    <activity android:name=".ui.cargos.FinishConferenceActivity" />
    <activity
      android:name=".ui.picking.StartPickingActivity"
      android:screenOrientation="portrait" />
    <activity android:name=".ui.picking.PickingActivity" />
    <activity
      android:name=".ui.equipments.ReleaseEquipmentsListActivity"
      android:screenOrientation="portrait" />
    <activity android:name=".ui.picking.FinishPickingActivity" />
  </application>

</manifest>
