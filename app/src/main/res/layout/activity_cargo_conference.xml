<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/constraint_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".ui.conference.cargo.CargoConferenceActivity">

  <br.com.trivio.wms.components.custom.TopBar
    android:id="@+id/top_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:title="@string/cargo_conference" />

  <br.com.trivio.wms.components.custom.BarcodeReader
    android:id="@+id/barcode_reader"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:padding="0dp"
    android:visibility="visible" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal">

    <br.com.trivio.wms.components.custom.ProgressBar
      android:id="@+id/count_progress_bar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/top_bar"
      android:layout_weight="3"
      android:background="@color/colorPrimary"
      android:gravity="center"
      android:orientation="vertical"
      android:padding="@dimen/padding_half"
      app:label_below_bar=""
      app:layout_constraintTop_toBottomOf="@id/top_bar"
      app:show_label_top="true" />

    <Button
      android:id="@+id/btn_finish_arrival"
      style="@style/button_action.ok"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_margin="5dp"
      android:layout_weight="0"
      android:text="@string/finish_arrival_break_line"
      android:textSize="12sp" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <br.com.trivio.wms.components.custom.SearchInput
        android:id="@+id/barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:inputType="number"
        android:textSize="@dimen/large_text"
        app:hint="@string/product_code" />

      <ImageView
        android:id="@+id/btn_open_camera"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/ic_barcode_white_24dp" />
    </LinearLayout>


    <br.com.trivio.wms.components.custom.RefreshableList
      android:id="@+id/cargo_items_recycler_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />
  </LinearLayout>
</LinearLayout>
