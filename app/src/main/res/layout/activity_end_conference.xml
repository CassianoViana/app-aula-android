<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/refresh_cargo_activity"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/button_close_x" />

    <androidx.constraintlayout.widget.ConstraintLayout

      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingLeft="@dimen/padding"
      android:paddingRight="@dimen/padding">

      <TextView
        android:id="@+id/bono_ref_code_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bono #123123"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/medium_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalizar a conferência?"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/medium_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bono_ref_code_info" />

      <ImageView
        android:id="@+id/icon_finish_counting"
        android:layout_width="150dp"
        android:layout_height="114dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_close_red_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

      <TextView
        android:id="@+id/final_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Os itens do bono não conferem com a contagem realizada"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/medium_large_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_finish_counting" />

      <TextView
        android:id="@+id/truck_label_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minHeight="@dimen/large_text"
        android:text="CFA 1212"
        android:textSize="@dimen/large_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/final_message" />

      <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placa"
        android:textColor="@color/grey"
        android:textSize="@dimen/small_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/truck_label_info" />

      <TextView
        android:id="@+id/driver_name_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Raimundo Nonato"
        android:textSize="@dimen/large_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motorista"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driver_name_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
      android:id="@+id/layout_success"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent">

      <Button
        android:id="@+id/btn_cancel"
        style="@style/button_action.cancel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/cancel"
        android:textAlignment="textStart" />

      <Button
        android:id="@+id/btn_finish_counting"
        style="@style/button_action.ok"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/finish"
        android:textAlignment="textStart" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/layout_fail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent">

      <Button
        android:id="@+id/btn_restart_counting"
        style="@style/button_action.back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/restart_counting"
        android:textAlignment="textStart" />

      <Button
        android:id="@+id/btn_finish_with_divergences"
        style="@style/button_action.ok"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/finish_with_divergences"
        android:textAlignment="textStart" />
    </LinearLayout>
  </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
