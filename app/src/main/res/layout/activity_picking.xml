<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/coordinator_conference_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true">

  <com.google.android.material.appbar.AppBarLayout
    android:id="@+id/app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.appbar.CollapsingToolbarLayout
      android:id="@+id/toolbar_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fitsSystemWindows="true"
      app:layout_scrollFlags="scroll|enterAlways"
      app:toolbarId="@+id/toolbar">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <br.com.trivio.wms.components.custom.TopBar
          android:id="@+id/top_bar"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          app:layout_collapseMode="pin"
          app:title="@string/separation" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <br.com.trivio.wms.components.custom.ProgressBar
            android:id="@+id/count_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_bar"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_half"
            app:label_below_bar=""
            app:layout_constraintTop_toBottomOf="@id/top_bar"
            app:show_label_top="true" />

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <br.com.trivio.wms.components.custom.BadgedButton
              android:id="@+id/btn_equipments"
              android:layout_width="50dp"
              android:layout_height="match_parent"
              android:layout_marginRight="5dp"
              app:btn_drawable="@drawable/ic_action_shopping_cart_black_18dp"
              app:btn_padding="7dp"
              app:value="3" />

            <Button
              android:id="@+id/btn_finish_picking"
              style="@style/button_action.ok"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_marginRight="5dp"
              android:drawableTint="@color/colorWhite"
              android:text="@string/finish"
              android:textAlignment="textStart"
              android:textSize="12sp"
              tools:ignore="RtlCompat" />

          </LinearLayout>
        </LinearLayout>


      </LinearLayout>

    </com.google.android.material.appbar.CollapsingToolbarLayout>


  </com.google.android.material.appbar.AppBarLayout>

  <!--<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/fab_scroll_top_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:tint="@color/colorWhite"
    app:layout_anchor="@id/cargo_items_recycler_view"
    app:layout_anchorGravity="bottom|end"
    app:srcCompat="@drawable/ic_baseline_arrow_upward_24" />-->

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
      android:id="@+id/main_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="vertical">

      <br.com.trivio.wms.components.custom.BarcodeReader
        android:id="@+id/barcode_reader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/barcode_reader_height"
        android:padding="0dp"
        android:visibility="visible" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <br.com.trivio.wms.components.custom.SearchInput
          android:id="@+id/barcode_search_input"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:inputType="number"
          android:textSize="@dimen/large_text"
          app:hint="@string/product_code" />

        <ImageView
          android:id="@+id/btn_open_camera"
          android:layout_width="@dimen/btn_barcode_width"
          android:layout_height="match_parent"
          android:background="@color/colorPrimaryDark"
          android:src="@drawable/ic_barcode_white_24dp" />
      </LinearLayout>


    </LinearLayout>

    <br.com.trivio.wms.components.custom.RefreshableList
      android:id="@+id/picking_items_recycler_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />
  </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
