<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/badge_text"
    style="@style/TagTextWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_blue_rounded"
    android:drawableTint="@color/colorWhite"
    android:src="@drawable/ic_cart_18dp"
    android:textAlignment="center"
    android:textColor="@color/grey"
    android:tint="@color/colorWhite" />

  <TextView
    android:id="@+id/badge_button_count"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/badge_text"
    android:layout_margin="2dp"
    android:background="@drawable/light_red_rounded"
    android:paddingLeft="5dp"
    android:paddingTop="2dp"
    android:paddingRight="5dp"
    android:paddingBottom="2dp"
    android:text="3"
    android:textColor="@color/colorWhite"
    android:textSize="@dimen/mini_text"
    android:textStyle="bold" />

</RelativeLayout>
