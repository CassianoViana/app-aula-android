<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/colorWhite"
  android:orientation="horizontal">

  <TextView
    android:id="@+id/custom_number_input_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_weight="1"
    android:text="Adicionar"
    android:textAlignment="viewEnd"
    android:textSize="@dimen/medium_text"
    tools:ignore="RtlCompat" />

  <EditText
    android:id="@+id/custom_number_input"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:background="@color/colorWhite"
    android:drawableTint="@color/lighterGray3"
    android:gravity="center"
    android:hint="0"
    android:inputType="number"
    android:textAlignment="center"
    android:textColorHint="@color/grey"
    android:textSize="@dimen/huge_text" />

  <TextView
    android:id="@+id/custom_number_input_label_after_input"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_weight="1"
    android:text="CX"
    android:textSize="@dimen/large_text" />

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageButton
      android:id="@+id/icon_add"
      style="@style/light_blue_rounded"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginBottom="2dp"
      android:padding="14dp"
      android:src="@drawable/ic_baseline_add_24"
      android:tint="@color/colorWhite" />

    <ImageButton
      android:id="@+id/icon_remove"
      style="@style/light_blue_rounded"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:padding="14dp"
      android:src="@drawable/ic_baseline_remove_24"
      android:tint="@color/colorWhite" />

  </LinearLayout>

</LinearLayout>
