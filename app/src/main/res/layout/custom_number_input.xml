<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/colorWhite"
  android:orientation="horizontal">

  <TextView
    android:id="@+id/custom_number_input_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:text="@string/already_conted_x_unities"
    android:textSize="@dimen/medium_text" />

  <EditText
    android:id="@+id/custom_number_input"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/colorWhite"
    android:drawableTint="@color/lighterGray3"
    android:gravity="center"
    android:hint="0"
    android:inputType="number"
    android:padding="8dp"
    android:textAlignment="center"
    android:textColorHint="@color/grey"
    android:textSize="@dimen/huge_text" />

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageButton
      android:id="@+id/icon_add"
      style="@style/light_blue_rounded"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginBottom="2dp"
      android:padding="15dp"
      android:src="@drawable/ic_baseline_arrow_drop_up_24"
      android:tint="@color/colorWhite" />

    <ImageButton
      android:id="@+id/icon_remove"
      style="@style/light_blue_rounded"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:padding="15dp"
      android:src="@drawable/ic_baseline_arrow_drop_down_24"
      android:tint="@color/colorWhite" />

  </LinearLayout>

</LinearLayout>
