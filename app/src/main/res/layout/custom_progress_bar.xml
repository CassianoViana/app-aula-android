<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/totals_to_count"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_below="@id/top_bar"
  android:orientation="horizontal"
  android:padding="0dp"
  app:layout_constraintTop_toBottomOf="@id/top_bar">

  <LinearLayout
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:id="@+id/label_top_progress_bar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=""
      android:textColor="@color/colorWhite"
      android:textStyle="bold" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

      <LinearLayout
        android:id="@+id/progress_line"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@color/progress_bar_incomplete_part"
        android:orientation="horizontal" />

    </LinearLayout>

    <TextView
      android:id="@+id/label_below_progress_bar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=""
      android:textColor="@color/colorWhite"
      android:textStyle="bold" />
  </LinearLayout>

  <ImageView
    android:id="@+id/icon_finish_bar"
    style="@style/primary_rounded"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:padding="8dp"
    android:src="@drawable/ic_check_black_24dp"
    android:tint="@color/colorWhite" />

</LinearLayout>
