<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/rounded_background"
  android:orientation="vertical">

  <include layout="@layout/button_close_x" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding"
    android:paddingBottom="@dimen/padding_half"
    >

    <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
        android:id="@+id/first_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quanto"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="22dp" />

      <TextView
        android:id="@+id/second_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="vocáº½ quer cobrar?"
        android:textSize="@dimen/medium_text" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/views_to_add_before_input"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0"
      android:orientation="vertical"/>

    <EditText
      android:id="@+id/input_value"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:hint="0,00"
      android:inputType="number"
      android:textSize="@dimen/huge_text" />

    <LinearLayout
      android:id="@+id/views_to_add_after_input"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:layout_weight="1"
      android:orientation="vertical"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <Button
        android:id="@+id/negative_action"
        style="@style/light_red_rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent" />

      <Button
        android:id="@+id/positive_action"
        style="@style/button_action.ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:text="@string/confirm"
        app:layout_constraintBottom_toBottomOf="parent" />
    </LinearLayout>
  </LinearLayout>


</LinearLayout>
