<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginStart="@dimen/item_list_margin"
  android:layout_marginTop="@dimen/item_list_margin"
  android:layout_marginEnd="@dimen/item_list_margin">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">

      <TextView
        android:id="@+id/name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ConferÃªncia"
        android:textColor="@color/colorDark"
        android:textSize="@dimen/medium_text" />

      <TextView
        android:id="@+id/item_code"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableStart="@drawable/pound_box_black_18_dp"
        android:drawableLeft="@drawable/pound_box_black_18_dp"
        android:text="code"
        android:textColor="@color/lightGrey" />


      <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableStart="@drawable/ic_calendar_star_black_18dp"
        android:drawableLeft="@drawable/ic_calendar_star_black_18dp"
        android:text="date"
        android:textColor="@color/lightGrey"
        app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

    <LinearLayout
      android:id="@+id/linearLayout4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="0"
      android:gravity="end"
      android:orientation="vertical">

      <TextView
        android:id="@+id/text_view_quantity_to_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="25sp" />

      <br.com.trivio.wms.components.custom.Badge
        android:id="@+id/cargo_status_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:badge_text="Teste"
        app:badge_text_color="@color/colorWhite" />
    </LinearLayout>

  </LinearLayout>


</androidx.cardview.widget.CardView>
