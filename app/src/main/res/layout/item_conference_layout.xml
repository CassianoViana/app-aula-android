<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginStart="@dimen/item_list_margin"
  android:layout_marginTop="@dimen/item_list_margin"
  android:layout_marginEnd="@dimen/item_list_margin">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/padding">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">

      <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Ábaco"
        android:textColor="@color/colorDark"
        android:textSize="@dimen/medium_text" />


      <TextView
        android:id="@+id/sku_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/pound_box_black_18_dp"
        android:text="12312"
        android:textColor="@color/lightGrey" />

      <TextView
        android:id="@+id/gtin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_barcode_black_18dp"
        android:text="71231231231"
        android:textColor="@color/lightGrey" />

      <LinearLayout
        android:id="@+id/count_labels_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
          android:id="@+id/counting_status_ok"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawableLeft="@drawable/ic_baseline_check_circle_18"
          android:drawableTint="@color/success"
          android:text="@string/counting_ok"
          android:textColor="@color/success" />

        <TextView
          android:id="@+id/counting_status_divergent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawableLeft="@drawable/ic_baseline_error_18"
          android:drawableTint="@color/error"
          android:text="@string/counting_divergent"
          android:textColor="@color/error" />

        <TextView
          android:id="@+id/counting_status_pending"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawableLeft="@drawable/ic_baseline_access_time_18"
          android:drawableTint="@color/colorPrimaryDark"
          android:text="@string/counting_pending"
          android:textColor="@color/colorPrimaryDark" />

        <TextView
          android:id="@+id/damaged_qtd"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawableLeft="@drawable/ic_baseline_broken_image_18"
          android:drawableTint="@color/warning"
          android:text="0 itens avariados"
          android:textColor="@color/warning" />

        <TextView
          android:id="@+id/count_history_txt_view"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:drawableLeft="@drawable/ic_baseline_format_list_numbered_rtl_24"
          android:drawableTint="@color/warning"
          android:gravity="center"
          android:text="@string/count_history_underline"
          android:textColor="@color/warning" />
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
          android:id="@+id/counted_qtd"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="10"
          android:textSize="@dimen/large_text" />

        <TextView
          android:id="@+id/storage_unit_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="CX"
          android:textColor="@color/colorPrimaryDark"
          android:textSize="@dimen/medium_large_text" />

      </LinearLayout>
    </LinearLayout>

  </LinearLayout>

</androidx.cardview.widget.CardView>
