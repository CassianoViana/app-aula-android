<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginStart="@dimen/item_list_margin"
  android:layout_marginTop="@dimen/item_list_margin"
  android:layout_marginEnd="@dimen/item_list_margin">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="@dimen/padding">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
          android:id="@+id/equipment_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Carrinho de Supermercado"
          android:textColor="@color/colorDark"
          android:textSize="@dimen/medium_text" />

        <TextView
          android:id="@+id/equipment_code"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:drawableStart="@drawable/pound_box_black_18_dp"
          android:drawableLeft="@drawable/pound_box_black_18_dp"
          android:text="code"
          android:textColor="@color/lightGrey" />

      </LinearLayout>

      <Button
        android:id="@+id/btn_add_equipment"
        style="@style/button_action.ok"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="0"
        android:background="@drawable/ic_baseline_check_box_outline_blank_24"
        android:backgroundTint="@color/colorLightBlueAccent" />

    </LinearLayout>

  </LinearLayout>


</androidx.cardview.widget.CardView>
