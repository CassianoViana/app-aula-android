<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
      android:id="@+id/product_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/position_name"
      android:layout_alignParentStart="true"
      android:layout_toStartOf="@+id/counted_unit_layout"
      android:text="Nome produto"
      android:textColor="@color/colorPrimaryDark"
      android:textSize="@dimen/medium_large_text" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
          android:id="@+id/product_sku"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawableLeft="@drawable/pound_box_black_18_dp"
          android:text="00000"
          android:textSize="@dimen/medium_text"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <TextView
          android:id="@+id/product_gtin"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawableLeft="@drawable/ic_barcode_black_18dp"
          android:text="00000"
          android:textSize="@dimen/medium_text"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <br.com.trivio.wms.components.custom.LabelledInfo
          android:id="@+id/text_view_qtd_solicited"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:label_title="@string/picked_slash_total"
          app:label_value="10/20"
          app:labelled_info_text_align="center" />
      </LinearLayout>
    </LinearLayout>


  </LinearLayout>
</LinearLayout>

