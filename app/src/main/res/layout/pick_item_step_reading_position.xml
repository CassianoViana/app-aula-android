  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <br.com.trivio.wms.components.custom.LabelledIcon
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding"
    app:labelled_icon_color="@color/green_accent"
    app:labelled_icon_label="Vá até a posição e leia o código"
    app:labelled_icon_src="@drawable/ic_baseline_directions_walk_30" />

  <br.com.trivio.wms.components.custom.LabelledInfo
