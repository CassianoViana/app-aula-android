    android:layout_height="wrap_content"
    app:label_title="Posição"
    app:label_value="123.123.123"
    app:labelled_info_text_align="center" />

  <br.com.trivio.wms.components.custom.BarcodeReader
    android:layout_width="match_parent"
    android:layout_height="200dp" />

