<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="SearchInput">
    <attr name="hint" format="string" />
  </declare-styleable>

  <declare-styleable name="ProgressBar">
    <attr name="progress" format="integer" />
    <attr name="label_below_bar" format="string" />
    <attr name="bar_height" format="dimension" />
    <attr name="show_label" format="boolean" />
    <attr name="show_label_top" format="boolean" />
    <attr name="foreground_color" format="reference|color" />
    <attr name="background_color" format="reference|color" />
  </declare-styleable>

  <declare-styleable name="TopBar">
    <attr name="title" format="string" />
  </declare-styleable>

  <declare-styleable name="LabelledInfo">
    <attr name="label_title" format="string" />
    <attr name="label_value" format="string" />
  </declare-styleable>

  <declare-styleable name="Badge">
    <attr name="badge_text" format="string" />
    <attr name="badge_text_color" format="reference|color" />
  </declare-styleable>

  <declare-styleable name="NumberInput">
    <attr name="buttons_color" format="color" />
  </declare-styleable>
</resources>
