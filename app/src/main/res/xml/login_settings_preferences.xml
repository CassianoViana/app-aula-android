<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <PreferenceCategory app:title="@string/connection">

    <EditTextPreference
      app:key="server_url"
      app:title="@string/server_url"
      app:useSimpleSummaryProvider="true" />

  </PreferenceCategory>

  <PreferenceCategory app:title="Avançado">
    <CheckBoxPreference
      app:key="developer_mode"
      app:title="Modo desenvolvedor" />

    <EditTextPreference
      android:shouldDisableView="true"
      app:key="local_url"
      app:title="Endereço API local"
      app:useSimpleSummaryProvider="true" />
  </PreferenceCategory>

